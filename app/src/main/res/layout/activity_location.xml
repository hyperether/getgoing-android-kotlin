<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.hyperether.getgoing.ui.activity.LocationActivity.ClickHandler" />
    </data>


    <RelativeLayout
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <fragment
            android:id="@+id/show_map_page"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/data_layout"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:id="@+id/buttons_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/location_buttons_layout_margin_left_right"
                android:layout_marginLeft="@dimen/location_buttons_layout_margin_left_right"
                android:layout_marginTop="@dimen/location_buttons_layout_margin"
                android:layout_marginEnd="@dimen/location_buttons_layout_margin_left_right"
                android:layout_marginRight="@dimen/location_buttons_layout_margin_left_right"
                android:layout_marginBottom="@dimen/location_buttons_layout_margin"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/activity_horizontal_margin">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/button_save"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp" />

                <Button
                    android:id="@+id/start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toStartOf="@+id/refresh_button"
                    android:layout_toLeftOf="@+id/refresh_button"
                    android:layout_toEndOf="@id/save_button"
                    android:layout_toRightOf="@id/save_button"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/button_start"
                    android:gravity="center_horizontal"
                    android:onClick="@{viewModel::onStart}"
                    android:src="@drawable/button_start" />

                <Button
                    android:id="@+id/end_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toStartOf="@+id/refresh_button"
                    android:layout_toLeftOf="@+id/refresh_button"
                    android:layout_toEndOf="@id/save_button"
                    android:layout_toRightOf="@id/save_button"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/button_stop"
                    android:onClick="@{viewModel::onStop}"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/refresh_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/button_reset"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/statistic_layout"
                android:background="@color/location_view_line" />

            <RelativeLayout
                android:id="@+id/statistic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttons_layout"
                android:layout_marginTop="@dimen/location_buttons_layout_margin"
                android:layout_marginBottom="@dimen/location_buttons_layout_margin"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/clock_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/location_img_margin_bottom"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/clock_image"
                        android:src="@drawable/clock" />

                    <Chronometer
                        android:id="@+id/showTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/location_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/kcal_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/location_margin_left"
                    android:layout_marginLeft="@dimen/location_margin_left"
                    android:layout_toEndOf="@+id/clock_layout"
                    android:layout_toRightOf="@+id/clock_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/fire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/location_img_margin_bottom"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/fire_image"
                        android:src="@drawable/fire" />

                    <Chronometer
                        android:id="@+id/showCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="0:00kcal"
                        android:textSize="@dimen/location_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/road_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/location_margin_left"
                    android:layout_marginLeft="@dimen/location_margin_left"
                    android:layout_toEndOf="@+id/kcal_layout"
                    android:layout_toRightOf="@+id/kcal_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/road"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/location_img_margin_bottom"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/road_image"
                        android:src="@drawable/road" />

                    <Chronometer
                        android:id="@+id/showDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="0:00m"
                        android:textSize="@dimen/location_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/speed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/location_margin_left"
                    android:layout_marginLeft="@dimen/location_margin_left"
                    android:layout_toEndOf="@+id/road_layout"
                    android:layout_toRightOf="@+id/road_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/location_img_margin_bottom"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/speed_image"
                        android:src="@drawable/speedmeter" />

                    <Chronometer
                        android:id="@+id/showVelocity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="0:00m/s"
                        android:textSize="@dimen/location_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avg_speed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/location_margin_left"
                    android:layout_marginLeft="@dimen/location_margin_left"
                    android:layout_toEndOf="@+id/speed_layout"
                    android:layout_toRightOf="@+id/speed_layout"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avg_speed_nobg_full_chronometer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/location_img_margin_bottom"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/avg_speed_image"
                        android:src="@drawable/avg_speed" />

                    <Chronometer
                        android:id="@+id/showVelocityAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:format="0:00m/s"
                        android:maxLines="1"
                        android:textSize="@dimen/location_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>